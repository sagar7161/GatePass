<?xml version="1.0" encoding="UTF-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="9dp"

    android:layout_margin="10dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/empImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:srcCompat="@drawable/ic_launcher_background"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/empName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/empImage"
            android:text="EMployee Name"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/empId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/empName"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/empImage"
            android:text="srkay_01"
            android:textAlignment="viewStart"
            android:textColor="@color/common_google_signin_btn_text_light_pressed"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/empId"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/empImage"
            android:text="2019-04-12 11-49-23"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="9sp" />

    </RelativeLayout>







    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reasonLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="100dp"
            android:ellipsize="end"
            android:maxLines="6"
            android:text="Leave Reason:"
            android:textAlignment="viewStart"
            android:textColor="@color/title"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="120dp"
            android:ellipsize="end"
            android:maxLines="6"
            android:padding="8dp"
            android:text="Reason:"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/showMore"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reason"
            android:layout_marginStart="-120dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/reason"
            android:paddingRight="10sp"
            android:text="abcdefgh"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textStyle="bold|italic" />

    </RelativeLayout>

</android.support.v7.widget.CardView>